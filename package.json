{
  "name": "cookie-consent",
  "version": "1.0.0",
  "description": "",
  "main": "./build/cookie-consent.js",
  "types": "./build/cookie-consent.d.ts",
  "files": [
    "build/**/*"
  ],
  "scripts": {
    "install": "npm ci",
    "clean": "rm -rf dist/*",
    "build": "npm run clean && npm run copy-config && npm run less && tsc",
    "less": "npx lessc ./src/style.less ./dist/cookie-consent-form.css",
    "copy-config": "cp -R todist/* dist",
    "lint": "eslint . --ext .ts",
    "lint-fix": "eslint . --ext .ts --fix",
    "test:ci": "jest",
    "test": "jest --watchAll --no-cache",
    "check": "npm run dist && npm run lint && npm run test:ci"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "./src/test/setup.ts"
    ],
    "modulePathIgnorePatterns": [
      "build/"
    ]
  },
  "author": "thjo",
  "license": "ISC",
  "devDependencies": {
    "@types/jest": "^29.2.4",
    "@typescript-eslint/eslint-plugin": "^5.46.1",
    "@typescript-eslint/parser": "^5.46.1",
    "eslint": "^8.30.0",
    "jest": "^29.3.1",
    "less": "^4.1.3",
    "ts-jest": "^29.0.3",
    "ts-loader": "^9.4.2",
    "typescript": "^4.9.4"
  }
